alias cdd="cd /mnt/d/Projects/"

if grep -qEi "(Microsoft|WSL)" /proc/version &> /dev/null; then
    alias git="git.exe"  # Use Windows Git in WSL
else
    unalias git 2>/dev/null  # Remove alias if not in WSL
fi

gitpa() {
  for dir in */; do
    echo $dir
    if [ -d "$dir" ]; then
      echo "Pulling in: $dir"
      cd "$dir" && git pull
      cd ..
    fi
  done
}

